<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:极简浏览器" xmlns:c="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf" xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" x:Class="极简浏览器.MainWindow" Title="极简浏览器" Width="600" WindowStartupLocation="Manual" WindowState="Normal" Loaded="Window_Loaded" Icon="favicon.ico" Height="500">
    <Window.Resources>
        <Style x:Key="WhiteMenuItem" TargetType="{x:Type MenuItem}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Width" Value="285" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Grid Height="35" Background="White" Width="{TemplateBinding Width}">
                            <Border x:Name="_border" />
                            <CheckBox x:Name="_check" IsChecked="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Visibility="Collapsed" VerticalAlignment="Center" Margin="10,0,0,0" IsEnabled="False"/>
                            <Label Foreground="Black" VerticalAlignment="Center" x:Name="_txt" Content="{Binding Header,RelativeSource={RelativeSource TemplatedParent}}" Margin="30,0,0,0" />
                            <Path Visibility="Collapsed" x:Name="_path" HorizontalAlignment="Right"  VerticalAlignment="Center" Data="M0,4 4,0 0,-4 z" Fill="#FF5F6368" Stretch="Fill" Width="9" Height="10" Margin="0,0,5,0" />
                            <Popup Placement="Right" x:Name="SubMenuPopup" AllowsTransparency="True" Focusable="False" IsOpen="{TemplateBinding IsSubmenuOpen}">
                                <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                    <Border Background="White" Name="SubmenuBorder" BorderBrush="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" BorderThickness="1" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle" />
                                    </Border>
                                </ScrollViewer>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="true">
                                <Setter TargetName="_path" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="_border" Property="Background" Value="#FFF1F3F4" />
                            </Trigger>
                            <Trigger Property="IsCheckable" Value="True">
                                <Setter TargetName="_check" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo />
    </Window.TaskbarItemInfo>
    <Grid x:Name="MainGrid">
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem x:Name="HidestartusBar" Header="隐藏状态栏" Click="StatusBar_ContextMenu_Click" />
            </ContextMenu>
        </Grid.ContextMenu>
        <Grid x:Name="CWBGrid" Margin="0,37,0,0" PreviewMouseWheel="CWBGrid_PreviewMouseWheel">
        </Grid>
        <Button x:Name="GoBackButton" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="35" Height="30" Click="GoBackButton_Click" BorderBrush="{x:Null}" FontSize="24" BorderThickness="0" FocusVisualStyle="{x:Null}" Background="{x:Null}">
            <Image x:Name="leftInnerImage" />
        </Button>
        <Button x:Name="GoForwardButton" HorizontalAlignment="Left" Margin="35,0,0,0" VerticalAlignment="Top" Width="35" Height="30" Click="GoForwardButton_Click" BorderBrush="{x:Null}" FontSize="24" BorderThickness="0" FocusVisualStyle="{x:Null}" Background="{x:Null}">
            <Image x:Name="rightInnerImage"></Image>
        </Button>
        <Button x:Name="RefershButton" HorizontalAlignment="Right" Margin="0,0,70,0" VerticalAlignment="Top" Width="35" Height="30" Click="RefreshButton_Click" BorderBrush="{x:Null}" Background="{x:Null}" FocusVisualStyle="{x:Null}" BorderThickness="0">
            <Image x:Name="refreshInnerImage" />
        </Button>
        <StackPanel x:Name="statusBar" Height="33" VerticalAlignment="Bottom" Background="#FFF1F3F4" HorizontalAlignment="Left" MouseEnter="startusBar_MouseEnter" Orientation="Horizontal">
            <StackPanel.Effect>
                <DropShadowEffect x:Name="barShadow" Direction="45" Opacity="0.2"/>
            </StackPanel.Effect>
            <Label x:Name="label1" Content=""/>
            <Label x:Name="label2" Content="此网页不文明!" Visibility="Collapsed" Foreground="Red"/>
        </StackPanel>
        <Button x:Name="AddNewPageButton" HorizontalAlignment="Right" Margin="0,0,35,0" VerticalAlignment="Top" Width="35" FontSize="22" Height="30" Click="AddNewPageButton_Click" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}" FocusVisualStyle="{x:Null}" BorderThickness="0">
            <Image x:Name="newInnerImage" />
        </Button>
        <ProgressBar x:Name="LoadProgressBar" Maximum="100" Margin="0,30,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="7" Background="{x:Null}" BorderThickness="0">
        </ProgressBar>
        <TextBox x:Name="UrlTextBox" Height="30" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" FontSize="20" Margin="70,0,105,0" KeyDown="Go">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border BorderBrush="#FFF0F0F0" BorderThickness="2" CornerRadius="13" Background="#FFF0F0F0">
                                    <ScrollViewer x:Name="PART_ContentHost" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type TextBox}">
                                        <Border BorderBrush="Blue" BorderThickness="2" CornerRadius="13" Background="White">
                                            <ScrollViewer x:Name="PART_ContentHost" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>
        <Menu HorizontalAlignment="Right" VerticalAlignment="Top" Background="White">
            <MenuItem Header="..." BorderThickness="0" FontSize="22" Background="White" Width="35" Height="30">
                <MenuItem Header="上一页(_B)" Click="GoForwardButton_Click" Style="{StaticResource WhiteMenuItem}" />
                <MenuItem Header="下一页(_F)" Click="GoBackButton_Click" Style="{StaticResource WhiteMenuItem}" />
                <MenuItem Header="刷新(_R)" Click="RefreshButton_Click" Style="{StaticResource WhiteMenuItem}" />
                <MenuItem Header="添加新页面(_N)" Click="AddNewPageButton_Click" Style="{StaticResource WhiteMenuItem}" />
                <MenuItem Header="查看网页源代码(_V)" Click="ViewSource_Click" Style="{StaticResource WhiteMenuItem}" />
                <MenuItem Header="设为书签(_E)" Click="SetBookMark_Click" Style="{StaticResource WhiteMenuItem}" />
                <MenuItem Header="历史记录/书签(_H)" Click="ViewHistory_Click" Style="{StaticResource WhiteMenuItem}" />
                <MenuItem Header="设置(_S)" Click="Setting_Click" Style="{StaticResource WhiteMenuItem}" />
                <MenuItem Header="帮助(_H)" Click="Help_Click" Style="{StaticResource WhiteMenuItem}" />
                <MenuItem Header="关于(_A)" Click="About_Click" Style="{StaticResource WhiteMenuItem}" />
                <MenuItem Header="开发者(_D)" Style="{StaticResource WhiteMenuItem}">
                    <MenuItem x:Name="RunJSButton" Header="执行Javascript(_J)" Style="{StaticResource WhiteMenuItem}" Click="RunJSButton_Click" />
                    <MenuItem x:Name="DevToolsButton" Header="开发者工具(_D)" Style="{StaticResource WhiteMenuItem}" Click="DevToolsButton_Click" />
                    <MenuItem x:Name="ExtensionsButton" Header="扩展(_E)" Style="{StaticResource WhiteMenuItem}" Click="ExtensionsButton_Click" />
                </MenuItem>
                <MenuItem Header="选项(_O)" Style="{StaticResource WhiteMenuItem}">
                    <MenuItem Header="置顶(_T)" IsCheckable="True" Click="Topmost_Checked" Style="{DynamicResource WhiteMenuItem}" />
                    <MenuItem Header="在本窗口打开(_S)" IsCheckable="True" Style="{StaticResource WhiteMenuItem}" x:Name="OnlyThis" />
                    <MenuItem Header="无痕模式(_P)" IsCheckable="True" Style="{StaticResource WhiteMenuItem}" x:Name="NoLogs" Click="NoLogs_Click" />
                </MenuItem>
            </MenuItem>
        </Menu>
    </Grid>
</Window>