<Window x:Class="极简浏览器.About" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="关于极简浏览器" Height="285"
        Width="400" FontSize="20" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded" Foreground="Black">
    <StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Image x:Name="image" HorizontalAlignment="Center" Height="70"
                    VerticalAlignment="Center" Width="70"
                    Source="/极简浏览器;component/favicon/favicon.ico" MouseLeftButtonDown="Circle"
                    RenderTransformOrigin="0.5,0.5" Margin="0,0,5,0" />
            <Label Content="极简浏览器&#xD;&#xA;       3" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Margin="5,0,0,0" />
        </StackPanel>
        <Label Content="开发者：KaiHuaDou" HorizontalAlignment="Center" Margin="10,10,10,5" />
        <Label x:Name="label3" Content="#####" HorizontalAlignment="Center" Margin="10,0,10,5" />
        <Label Content="KaiHuaDou Studio © 2019~2022" HorizontalAlignment="Center"
                Margin="10,0,10,5" Background="White" />
        <Button x:Name="button" Content="确定" HorizontalAlignment="Center" Margin="10,0,10,5"
                Width="100" Click="button_Click" />
    </StackPanel>
</Window>