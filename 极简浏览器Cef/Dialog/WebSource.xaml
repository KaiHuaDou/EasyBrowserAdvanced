<Window x:Class="极简浏览器.WebSource" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="网页源代码" Height="400" Width="700">
    <Grid>
        <ScrollViewer Margin="10,50,10,10" HorizontalScrollBarVisibility="Disabled">
            <TextBox x:Name="textBox" AcceptsReturn="True" AcceptsTab="True" TextWrapping="Wrap"></TextBox>
        </ScrollViewer>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Height="45" Orientation="Horizontal">
            <Button x:Name="button" Content="刷新(_R)" Width="100" Height="30" Margin="5" Click="button_Click" />
            <Button x:Name="button1" Content="格式化(_F)" Width="100" Height="30" Margin="5" Click="button1_Click" />
        </StackPanel>
    </Grid>
</Window>
