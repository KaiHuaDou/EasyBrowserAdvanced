<Window x:Class="极简浏览器.WebSource" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="网页源代码"
        Width="700" Height="400">
    <DockPanel>
        <StackPanel Height="45" Margin="0,0,0,5" HorizontalAlignment="Center" DockPanel.Dock="Bottom"
                    Orientation="Horizontal">
            <Button x:Name="refreshButton" Width="100" Height="30" Margin="5"
                    Click="refreshButton_Click" Content="刷新(_R)" />
            <Button x:Name="formatButton" Width="100" Height="30" Margin="5"
                    Click="formatButton_Click" Content="格式化(_F)" />
            <Button x:Name="saveButton" Width="100" Height="30" Margin="5"
                    Click="saveButton_Click" Content="保存(_S)" />
        </StackPanel>
        <TextBox x:Name="textBox" Margin="5,5,5,0" AcceptsReturn="True" AcceptsTab="True"
                 DockPanel.Dock="Top" TextWrapping="Wrap" />
    </DockPanel>
</Window>
