<Window x:Class="极简浏览器.Download" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:极简浏览器"
        Title="下载文件" Closing="Window_Closing" MinHeight="205" MaxHeight="205"
        MinWidth="200" SizeChanged="Window_SizeChanged" Width="600">
    <StackPanel>
        <Label x:Name="FileName" Content="" HorizontalAlignment="Left" Margin="10,5"
                VerticalAlignment="Top" />
        <Label x:Name="Speed" Content="0KB/s" HorizontalAlignment="Right" Margin="0,-40,10,5"
                VerticalAlignment="Top" />
        <ProgressBar x:Name="Progress" Height="30" Margin="10,0,10,5" VerticalAlignment="Top"
                Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Lime" />
        <Label x:Name="Percent" Content="0%" HorizontalAlignment="Right" Margin="10,-37,10,0"
                VerticalAlignment="Top" />
        <Label x:Name="FromURL" Content="" HorizontalAlignment="Left" Margin="10,0,10,5"
                VerticalAlignment="Top" />
        <Button x:Name="OpenButton" Content="打开" HorizontalAlignment="Right" Margin="10,0,10,5"
                VerticalAlignment="Top" Width="87" IsEnabled="False" Click="OpenButton_Click"
                Style="{StaticResource MaterialDesignPaperDarkButton}" />

    </StackPanel>
</Window>
