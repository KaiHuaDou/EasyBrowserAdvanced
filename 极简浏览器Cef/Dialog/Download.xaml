<Window x:Class="极简浏览器.Download" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:极简浏览器"
        Title="下载文件" Height="205" Width="500" Closing="Window_Closing">
    <StackPanel>
        <Label x:Name="FileName" Content="文件名" HorizontalAlignment="Left" Margin="10,5"
                VerticalAlignment="Top" />
        <ProgressBar x:Name="Progress" HorizontalAlignment="Left" Height="30" Margin="10,0,10,5"
                VerticalAlignment="Top" Width="472" Background="#FF06B025" BorderBrush="{x:Null}" />
        <Label x:Name="Percent" Content="100%" HorizontalAlignment="Right" Margin="10,-37,10,0"
                VerticalAlignment="Top" />
        <Label x:Name="FromURL" Content="从about:blank下载" HorizontalAlignment="Left"
                Margin="10,0,10,5" VerticalAlignment="Top" />
        <Label x:Name="Speed" Content="999KB/s" HorizontalAlignment="Right" Margin="0,-40,10,5"
                VerticalAlignment="Top" Height="37" />
        <Button x:Name="OpenButton" Content="打开" HorizontalAlignment="Right" Margin="10,0,10,5"
                VerticalAlignment="Top" Width="87" IsEnabled="False" Click="OpenButton_Click"
                Style="{StaticResource MaterialDesignPaperDarkButton}" />

    </StackPanel>
</Window>
