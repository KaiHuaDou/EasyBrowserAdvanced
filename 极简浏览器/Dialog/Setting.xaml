<Window Width="420" Height="150"
        x:Class="极简浏览器.Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置"
        ResizeMode="NoResize">
    <Grid>
        <Label Height="34" Margin="10,10,0,0" Content="主页："
               HorizontalAlignment="Left"
               VerticalAlignment="Top" />
        <TextBox x:Name="MainPageBox" Height="35" Margin="80,11,10,0"
                 VerticalAlignment="Top"
                 TextWrapping="NoWrap" />
        <Button x:Name="OKButton" Width="100" Margin="0,0,10,10" Click="OKButton_Click" Content="确定"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom" />
        <Button x:Name="CacheButton" Width="100" Margin="0,0,125,10" Click="CacheButton_Click" Content="清除缓存"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom" />
        <Button x:Name="LogButton" Width="100" Margin="0,0,240,10" Click="LogButton_Click" Content="清除日志"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom" />
    </Grid>
</Window>
