<Window Width="600"
        x:Class="极简浏览器.Download"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:极简浏览器"
        Title="下载文件"
        MinWidth="200"
        MinHeight="205"
        MaxHeight="205"
        Closing="Window_Closing"
        SizeChanged="Window_SizeChanged">
    <StackPanel Margin="10,10,10,10">
        <Label x:Name="FileName" Content="" />
        <Label x:Name="Speed" Margin="0,-35,0,0" Content="0KB/s"
               HorizontalAlignment="Right" />
        <ProgressBar x:Name="Progress" Height="30"
                     Background="{x:Null}"
                     BorderBrush="{x:Null}"
                     Foreground="Lime"
                     Value="100" />
        <Label x:Name="Percent" Margin="0,-34,0,0" Content="0%"
               HorizontalAlignment="Right" />
        <Label x:Name="FromURL" Content="about:blank" />
        <Button x:Name="OpenButton" Padding="30,3" Click="OpenButton_Click" Content="打开"
                HorizontalAlignment="Right"
                IsEnabled="False" />
    </StackPanel>
</Window>
