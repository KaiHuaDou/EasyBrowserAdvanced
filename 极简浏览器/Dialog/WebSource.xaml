<Window Width="700" Height="400"
        x:Class="极简浏览器.WebSource"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="网页源代码">
    <DockPanel Margin="10,10,10,10">
        <StackPanel Margin="0,0,5,0" DockPanel.Dock="Left"
                    HorizontalAlignment="Center">
            <Button x:Name="refreshButton" Margin="5" Padding="30,3" Click="refreshButton_Click" Content="刷新" />
            <Button x:Name="formatButton" Margin="5" Padding="30,3" Click="formatButton_Click" Content="格式化" />
            <Button x:Name="saveButton" Margin="5" Padding="30,3" Click="saveButton_Click" Content="保存" />
        </StackPanel>
        <TextBox x:Name="textBox" DockPanel.Dock="Top"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 TextWrapping="Wrap" />
    </DockPanel>
</Window>
