<Window x:Class="极简浏览器.Report"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="反馈错误"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">
    <DockPanel Margin="10,10,10,10">
        <Label x:Name="label" Content="抱歉，程序出现了错误" DockPanel.Dock="Top" />
        <Label DockPanel.Dock="Top">
            <Hyperlink NavigateUri="https://github.com/KaiHuaDou/EasyBrowserAdvanced/issue">Github 反馈通道</Hyperlink>
        </Label>
        <Button Margin="0,10,0,0" Padding="30,3" Click="ShutdownClick" Content="确定" DockPanel.Dock="Bottom"
                HorizontalAlignment="Right" />
        <TextBox x:Name="msgBox" Margin="0,10,0,0"
                 IsReadOnly="True"
                 TextWrapping="Wrap" />
    </DockPanel>
</Window>
